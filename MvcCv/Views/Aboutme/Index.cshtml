@using MvcCv.Models.Entity;
@model List<TblAboutme>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>About Me Menu</h2>

<br />
<form method="post" asp-action="SaveProfile" asp-controller="Admin" enctype="multipart/form-data">
    @foreach (var item in Model)
    {
        <label>Name</label>
        <input type="text" name="name" value="@item.name" class="form-control" />

        <label>Surname</label>
        <input type="text" name="surname" value="@item.surname" class="form-control" />

        <label>Address</label>
        <input type="text" name="address" value="@item.address" class="form-control" />

        <label>Phone</label>
        <input type="text" name="phone" value="@item.phone" class="form-control" />

        <label>Mail Address</label>
        <input type="text" name="mail_address" value="@item.mail_address" class="form-control" />

        <label>Image</label>
        <input type="text" name="Photo" value="@item.Photo" class="form-control" />

        <label>About Me</label>
        <textarea name="about_me" class="form-control" oninput="autoExpand(this)">@item.about_me</textarea>
        <br />

        <button type="submit" class="btn btn-info" onclick="return confirm('Are you sure?');">Submit</button>
        <a href="@Url.Action("CancelEdit", "Aboutme")" class="btn btn-danger" onclick="return confirm('Are you sure you want to discard the changes?');">Cancel</a>
    }
</form>


<script>
    function autoExpand(element) { //textarea'yı içeriğe göre genişleten fonksiyon
        element.style.height = "auto";
        element.style.height = element.scrollHeight + "px";
    }</script>


