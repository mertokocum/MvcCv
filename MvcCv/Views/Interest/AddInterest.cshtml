@model MvcCv.Models.Entity.TblHobbies

@{
    ViewBag.Title = "AddInterest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h4>Add New Interest</h4>
<br />
<form method="post">
    @*@Html.Label("University Name:")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })*@

    @Html.Label("Interest:")
    @Html.TextBoxFor(x => x.Detail1, new
    {
        @class = "form-control " + (ViewData.ModelState["Title"]?.Errors.Any() == true ? "border-danger" : ""),
        placeholder = ViewData.ModelState["Title"]?.Errors.FirstOrDefault()?.ErrorMessage ?? ""
    })
    @Html.ValidationMessageFor(x => x.Detail1, "", new { @class = "text-danger d-none" })

    <br />
    @Html.Label("Detail:")
    @Html.TextBoxFor(x => x.Detail2, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" onclick="return confirm('Are you sure?');">Submit</button>
</form>


<script>
    function autoExpand(element) { //textarea'yı içeriğe göre genişleten fonksiyon
        element.style.height = "auto";
        element.style.height = element.scrollHeight + "px";
    }</script>



