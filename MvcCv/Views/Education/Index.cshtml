@using MvcCv.Models.Entity;
@model List<TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h3>Education List</h3>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>University</th>
        <th>Department</th>
        <th>Location</th>
        <th>GNO</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Edit</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.Sub_Title</td>
            <td>@item.Sub_Title2</td>
            <td>@item.GNO</td>
            <td>@item.Date</td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Education/DeleteEducation/@item.ID" onclick="return confirm('Are you sure?');">
                    <i class="fas fa-trash"></i>
                    Delete
                </a>
            </td>
            <td style="display: flex; align-items: center; justify-content: center;">
                <a class="btn btn-info btn-sm" href="/Education/GetEducation/@item.ID">
                    <i class="fas fa-pencil-alt" style="margin-right: 5px;"></i>
                    Edit
                </a>
            </td>


        </tr>
    }
</table>
<a href="/Education/AddEducation/" class="btn btn-primary">Add New Education</a>



